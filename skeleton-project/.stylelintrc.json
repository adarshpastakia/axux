{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "plugins": ["stylelint-selector-bem-pattern"],
  "rules": {
    "no-descending-specificity": null,
    "at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["mixin", "define-mixin"] }
    ],
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]*(?:\\-[a-zA-Z0-9]+)*(?:__[a-z][a-zA-Z0-9]+)?(?:--[a-z][a-zA-Z0-9]+)?$",
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      "componentName": "[a-zA-Z0-9]+",
      "componentSelectors": {
        "initial": "^\\.ax-{componentName}(?:__{componentName}+)?(?:--{componentName}+)?$"
      },
      "utilitySelectors": "^\\.ax-{componentName}--{componentName}+$"
    }
  }
}
