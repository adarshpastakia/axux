{
  "convention": {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "refactor",
      "style",
      "test",
      "build",
      "ops",
      "docs",
      "chore",
      "merge",
      "revert",
      "WIP"
    ],
    "commitScopes": [],
    "releaseTagGlobPattern": "v[0-9]*.[0-9]*.[0-9]*"
  },

  "changelog": {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "merge",
      "revert",
      "style",
      "refactor"
    ],
    "includeInvalidCommits": true,
    "commitIgnoreRegexPattern": "^WIP ",
    "headlines": {
      "feat": "Features",
      "fix": "Bug Fixes",
      "perf": "Performance Improvements",
      "merge": "Merges",
      "revert": "Reverts",
      "style": "Styling Changes",
      "refactor": "Refactors",
      "breakingChange": "BREAKING CHANGES"
    },

    "commitUrl": "https://github.com/username/project/commit/%commit%",
    "issueUrl": "https://github.com/username/project/issues/%issue%",
    "issueRegexPattern": "#\\d+"
  }
}
