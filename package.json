{
  "name": "axux",
  "version": "2.0.0",
  "description": "AxUX React+TailwindCSS UI library",
  "author": "Adarsh Pastakia <adarshpastakia@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "storybook": "yarn copy && start-storybook -p 6003 --no-manager-cache",
    "build": "yarn copy && build-storybook -o ./build",
    "watch:test": "jest --ci --runInBand --detectOpenHandles --watchAll --json --outputFile=./.storybook/jest-test-results.json",
    "watch:lib": "lerna run watch --parallel",
    "watch": "npm-run-all -c --parallel watch:test watch:lib",
    "pretest": "lerna run build --stream",
    "test": "eslint . && jest --ci --runInBand --detectOpenHandles --forceExit",
    "dist": "lerna run build --stream",
    "copy": "cp -R ./node_modules/@arcgis/core/assets ./assets/@arcgis",
    "release": "lerna version --conventional-commits --yes --preid=beta -m \"chore(release): %v\""
  },
  "resolutions": {
    "@types/react": "^18.0.10",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14"
  },
  "dependencies": {
    "i18next": "^21.8.8",
    "i18next-browser-languagedetector": "^6.1.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^11.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
